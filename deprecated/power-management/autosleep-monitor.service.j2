# {{ ansible_managed }}
# VMStation Auto-Sleep Monitor Service
# Deployed to: /etc/systemd/system/vmstation-autosleep-monitor.service

[Unit]
Description=VMStation Auto-Sleep Monitor
Documentation=https://github.com/jjbly-vmstation/cluster-setup
After=network.target
After=kubelet.service
Wants=network-online.target

[Service]
Type=simple
ExecStart={{ scripts_dir }}/vmstation-autosleep-monitor.sh start
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=30

# Environment
Environment="CONFIG_FILE={{ config_dir }}/autosleep.conf"
Environment="STATE_FILE={{ state_dir }}/autosleep.state"
Environment="LOG_FILE={{ log_dir }}/autosleep.log"

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths={{ state_dir }} {{ log_dir }}
PrivateTmp=yes

# Resource limits
MemoryMax=128M
CPUQuota=10%

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=vmstation-autosleep

[Install]
WantedBy=multi-user.target
